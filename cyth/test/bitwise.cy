import "env"
  void log(string n)
  void log(int n)

string bits(int n)
  string buffer

  for int i = 31; i >= 0; i -= 1
    int mask = n >> i
    buffer += mask & 1

  return buffer

log("-1 ^ 1 = " + bits(-1 ^ 1))
log("255 & 128 = " + bits(255 & 128))
log("1 | 2 = " + bits(1 | 2))
log("1 << 3 = " + bits(1 << 3))
log("16 >> 1 = " + bits(16 >> 1))
log("-16 >> 1 = " + bits(-16 >> 1))
log("~0 = " + bits(~0))

